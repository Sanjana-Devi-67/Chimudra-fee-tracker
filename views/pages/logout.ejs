<body class="bg-white mandala-bg min-h-screen">
    <%- include('../partials/navbar') %>
    
    <div class="min-h-screen flex items-center justify-center">
        <div class="bg-white p-8 rounded-lg shadow-lg border-2 border-[#B31312] w-full max-w-md text-center">
            <h2 class="text-2xl font-bold text-[#B31312] mb-6">You have successfully logged out.</h2>
            <a href="/chimudra/login" class="bg-[#B31312] text-white px-6 py-2 rounded-lg hover:bg-red-700">Login Again</a>
