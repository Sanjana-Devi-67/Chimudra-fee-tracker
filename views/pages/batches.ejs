<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chinmudra Academy for Performing Arts</title>
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <style>
       :root {
            --primary-red: #B31312;
            --white: #ffffff;
        }
        
        body {
            font-family: 'Roboto', sans-serif;
        }
        
        .heading {
            font-family: 'Playfair Display', serif;
        }
        
        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(179, 19, 18, 0.2);
        }

        .mandala-bg {
            background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="45" fill="none" stroke="%23B31312" stroke-width="0.5" opacity="0.1"/></svg>');
            background-size: 200px;
        }

        #loginForm, #signupForm {
            display: none;
        }

        .mandala-bg {
            background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="45" fill="none" stroke="%23B31312" stroke-width="0.5" opacity="0.1"/></svg>');
            background-size: 200px;
        }
        .active {
            display: block !important;
        }
    </style>
</head>
<body class="bg-white mandala-bg min-h-screen">
    <%- include('../partials/navbar') %>
    <!-- Batch Selection -->
    <div id="batchSelection">
        <div class="container mx-auto px-4 py-8">
            <h2 class="heading text-3xl font-bold text-[#B31312] mb-8">Select Your Batch</h2>
            <div class="grid md:grid-cols-3 gap-8">
                <!-- Batch Cards -->
                <div class="bg-white p-8 rounded-lg shadow-md card-hover border border-gray-200  w-full md:w-[450px] h-[250px] flex flex-col justify-between">
                    <h3 class="text-xl font-bold text-[#B31312]">Morning Batch</h3>
                    <p class="text-gray-600 mt-2">6:00 AM - 7:30 AM</p>
                    <p class="text-lg text-[#B31312] font-bold mt-2">â‚¹2000</p>
                    <button class="w-full mt-4 bg-[#B31312] text-white py-2 rounded-lg pay-btn hover:bg-red-700 transition duration-300" data-batch="Morning Batch">Pay Now</button>
                </div>

                <div class="bg-white p-8 rounded-lg shadow-md card-hover border border-gray-200  w-full md:w-[450px] h-[250px] flex flex-col justify-between">
                    <h3 class="text-lg font-bold text-[#B31312]">Mid Morning Batch</h3>
                    <p class="text-gray-600">8:00 AM - 9:30 AM</p>
                    <p class="text-[#B31312] font-bold mt-2">â‚¹2000</p>
                    <button class="mt-4 bg-[#B31312] text-white px-4 py-2 rounded-md w-full pay-btn" data-batch="Mid Morning Batch">Pay Now</button>
                </div>

                <div class="bg-white p-8 rounded-lg shadow-md card-hover border border-gray-200  w-full md:w-[450px] h-[250px] flex flex-col justify-between">
                    <h3 class="text-lg font-bold text-[#B31312]">Late Morning Batch</h3>
                    <p class="text-gray-600">10:00 AM - 11:30 AM</p>
                    <p class="text-[#B31312] font-bold mt-2">â‚¹2000</p>
                    <button class="mt-4 bg-[#B31312] text-white px-4 py-2 rounded-md w-full pay-btn" data-batch="Late Morning Batch">Pay Now</button>
                </div>

                <div class="bg-white p-8 rounded-lg shadow-md card-hover border border-gray-200  w-full md:w-[450px] h-[250px] flex flex-col justify-between">
                    <h3 class="text-lg font-bold text-[#B31312]">Afternoon Batch</h3>
                    <p class="text-gray-600">2:00 PM - 3:30 PM</p>
                    <p class="text-[#B31312] font-bold mt-2">â‚¹2000</p>
                    <button class="mt-4 bg-[#B31312] text-white px-4 py-2 rounded-md w-full pay-btn" data-batch="Afternoon Batch">Pay Now</button>
                </div>
                <div class="bg-white p-8 rounded-lg shadow-md card-hover border border-gray-200  w-full md:w-[450px] h-[250px] flex flex-col justify-between">
                    <h3 class="text-lg font-bold text-[#B31312]">Evening Batch-1</h3>
                    <p class="text-gray-600">4:00 PM - 5:30 PM</p>
                    <p class="text-[#B31312] font-bold mt-2">â‚¹2000</p>
                    <button class="mt-4 bg-[#B31312] text-white px-4 py-2 rounded-md w-full pay-btn" data-batch="Afternoon Batch">Pay Now</button>
                </div>
                <div class="bg-white p-8 rounded-lg shadow-md card-hover border border-gray-200  w-full md:w-[450px] h-[250px] flex flex-col justify-between">
                    <h3 class="text-lg font-bold text-[#B31312]">Evening Batch-2</h3>
                    <p class="text-gray-600">6:00 PM - 7:30 PM</p>
                    <p class="text-[#B31312] font-bold mt-2">â‚¹2000</p>
                    <button class="mt-4 bg-[#B31312] text-white px-4 py-2 rounded-md w-full pay-btn" data-batch="Afternoon Batch">Pay Now</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const buttons = document.querySelectorAll(".pay-btn");

            buttons.forEach(button => {
                button.addEventListener("click", function() {
                    let batchName = this.getAttribute("data-batch");

                    var options = {
                        "key": "rzp_test_YourAPIKeyHere", // ðŸ”¥ Replace with your Razorpay API Key
                        "amount": 200000, // Amount in paise (â‚¹2000 = 200000)
                        "currency": "INR",
                        "name": "Chinmudra Academy",
                        "description": batchName,
                        "image": "https://your-logo-url.com/logo.png", // Add your logo URL
                        "handler": function (response){
                            alert("Payment Successful! Payment ID: " + response.razorpay_payment_id);
                        },
                        "prefill": {
                            "name": "John Doe",
                            "email": "john@example.com",
                            "contact": "9876543210"
                        },
                        "theme": {
                            "color": "#B31312"
                        }
                    };
                    var rzp1 = new Razorpay(options);
                    rzp1.open();
                });
            });
        });
    </script>
</body>
</html>